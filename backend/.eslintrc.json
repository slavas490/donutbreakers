{
    "parserOptions": {
        "ecmaVersion": 2017
    },
    "env": {
        "es6": true
    },
    "extends": "strongloop",
    "rules": {
		"strict": ["error", "never"],
		"indent": ["error", "tab"],
		"object-curly-spacing": ["error", "always"],
        "max-len": ["error", { "code": 120 }]
	}
}